@model IEnumerable<Formule1Library.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>F1 Constructeurs</h1>

<style>



</style>



<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Zoek via naam: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Zoeken" class="btn btn-default" /> |
            <a asp-action="Index">Terug naar de lijst</a>
        </p>
    </div>
</form>

<tr>
             <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">A/Z</a>
             </tr>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WikiUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
                @*<img src="@item.Country.FlagUrl">*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WikiUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID"></a> 
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ID"></a>
            </td>
        </tr>
}
    </tbody>
</table>

