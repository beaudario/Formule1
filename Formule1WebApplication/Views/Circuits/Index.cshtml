@model IEnumerable<Formule1Library.Circuit>

@{
    ViewData["Title"] = "Index";
}

<h1>Circuits</h1>

<div class="row"> 
    <div class="col-md-11"> </div>
        <a class="btn btn-primary col-md-1" asp-action="Create" asp-controller="Circuits">Nieuw
</a>
 <div class="col-md-10"> </div>
      <a class="btn btn-primary col-md-2" asp-action="" asp-controller="">Top 3 circuits
</a>  
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WikiUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WikiUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
                <img width="35%" src="@item.Country.FlagUrl">
            </td>
        </tr>
}
    </tbody>
</table>
